.remodal.changeUserModal(data-remodal-id="changeUserModal")
    .remodal-head
        .remodal-title 修改用户
        .remodal-close(data-remodal-action="cancel")
    .remodal-body
        form.modalForm
            .form-control
                label 所属机构
                select(name="org")
                    option(value="0") 客服
                    option(value="1") 结算专员
                    option(value="2") 后台维护管理员
            .form-control
                label 登录账号
                input(type="text" name="username")
            .form-control
                label 登录密码
                input(type="text" name="password")
            .form-control
                label 用户名称
                input(type="text" name="nickname")

    .remodal-footer
        a.remodal-confirm(href="javascript:;") 确 定